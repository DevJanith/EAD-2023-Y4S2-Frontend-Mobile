<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        app:cardElevation="11dp"
        app:cardCornerRadius="15dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textSTATUS"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="viewEnd"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="#182693"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewSTATUS"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textAlignment="viewEnd"
                android:elevation="10dp"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textSTART"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="START"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textColor="#182693"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewSTART"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textEND"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="END"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColor="#182693"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewEND"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

            </LinearLayout>

<!--            Train Name-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textTrainName"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Train Name"
                    android:textAlignment="viewEnd"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textColor="#182693"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewTrainName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="17sp" />


            </LinearLayout>

<!--            Train Number -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="-10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textTrainNumber"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Train Number"
                    android:textAlignment="viewEnd"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColor="#182693"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewTrainNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/displayNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Display Name : "
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/createDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Created At : "
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reserveCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No of Reservations : "
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reserveDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservation Date : "
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/statusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservation Status : "
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/amountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Tickets Price : "
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Add Update and Delete icon buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="end">

                <ImageButton
                    android:id="@+id/updateButton"
                    android:elevation="10dp"
                    android:background="@drawable/update_button_round"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:tint="@color/black"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_update"
                    android:contentDescription="Update" />

                <ImageButton
                    android:id="@+id/deleteButton"
                    android:elevation="10dp"
                    android:background="@drawable/delete_button_round"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:tint="@color/white"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_cancel"
                    android:contentDescription="Update" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>